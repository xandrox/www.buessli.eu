- for post in site.posts
  .blogpost
    %h2
      %a{:href=>post.url}= post.title
    .blogtagbar
      #{post.date.strftime( '%Y-%m-%d' )}
      &nbsp;|&nbsp;
      = page.flattr_compact_counter(:url=>"https://www.buessli.eu" + post.url, 
                                    :title=>post.title, 
                                    :tags=>post.tags.join(',')) 
    %p
      ~ post.content
    %hr
